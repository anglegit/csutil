#ifndef BASE_STATISTIC_DATA_H_
#define BASE_STATISTIC_DATA_H_

#include <string>

namespace base
{

struct DataInfo
{
    std::string data_type;
    uint64_t total_size;
    uint64_t max_size;
    uint64_t min_size;
    uint64_t avg_size;
    uint64_t total_count;

    DataInfo();
};

class DataStatistic
{
public:
    DataStatistic();
    ~DataStatistic();

private:
    std::string path_;
    std::map<std::string, DataInfo>

};

}

#endif
